<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fitapp.vizo.fitnessapp.SignUpActivity"
    android:background="@color/colorPrimaryLight">
<ViewFlipper
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newUserFirstName"
            android:layout_marginTop="121dp"
            android:hint="First Name"
            android:inputType="text"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:minWidth="175dp"
            android:textAlignment="center" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newUserLastName"
            android:hint="Last Name"
            android:inputType="text"
            android:text=""
            android:layout_below="@+id/newUserFirstName"
            android:layout_alignLeft="@+id/newUserFirstName"
            android:layout_alignStart="@+id/newUserFirstName"
            android:minWidth="175dp"
            android:textAlignment="center" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newUserUsername"
            android:hint="New Username"
            android:inputType="text"
            android:text=""
            android:layout_below="@+id/newUserLastName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:minWidth="175dp"
            android:textAlignment="center" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newUserPassword"
            android:hint="New Password"
            android:inputType="textPassword"
            android:text=""
            android:layout_below="@+id/newUserUsername"
            android:layout_alignRight="@+id/newUserUsername"
            android:layout_alignEnd="@+id/newUserUsername"
            android:minWidth="175dp"
            android:textAlignment="center" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/SubmitUserContactButton"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/newUserPassword"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:onClick="onClickSubmitUserContact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please Provide New User Details"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryLight" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test1"
            android:layout_marginTop="75dp"
            android:hint="First Name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/test2"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/test1"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent" />
    </RelativeLayout>

</ViewFlipper>

</RelativeLayout>
